@model TaskListRevisited.Models.TaskInfo

@{
    ViewData["Title"] = "Create";
}

<h1>Create</h1>

<h4>TaskInfo</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="TaskDesc" class="control-label"></label>
                <input asp-for="TaskDesc" class="form-control" />
                <span asp-validation-for="TaskDesc" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="TaskDueDate" class="control-label"></label>
                <input asp-for="TaskDueDate" class="form-control" />
                <span asp-validation-for="TaskDueDate" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="radio" name="TaskStatus" value="Completed"> Completed<br>
                <input type="radio" name="TaskStatus" value="Not-Completed"> Not-Completed<br>
                <span asp-validation-for="TaskStatus" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="UserId" class="control-label"></label>
                <select asp-for="UserId" class ="form-control" asp-items="ViewBag.UserId"></select>
            </div>
            <div class="form-group">
                <input type="submit" value="Create" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
